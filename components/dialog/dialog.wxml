<view class='wx_dialog_container' hidden='{{!isShow}}'> 
  <view class='wx-mask'></view>
  <view class='wx-dialog'>
    <view class='wx-dialog-title'>{{title}}</view>
    <view class='wx-dialog-content'>{{content}}</view>
    <view class='wx-dialog-footer'>
      <button class='wx-dialog-btn' bindtap="_confirmEvent" open-type="getUserInfo" bindgetuserinfo="agreeGetUser">{{confirmText}}</button>
      <!-- <button class='wx-dialog-btn' bindtap="_cancelEvent">{{cancelText}}</button> -->
      <!-- <view class='wx-dialog-btn' bindtap='_cancelEvent' >{{cancelText}}</view> -->
      <!-- <view class='wx-dialog-btn' bindtap='_confirmEvent'>{{confirmText}}</view> -->
    </view> 
  </view>
</view>